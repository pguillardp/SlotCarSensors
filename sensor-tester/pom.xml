<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.racer40</groupId>
		<artifactId>sensor-master</artifactId>
		<version>4.0.0-SNAPSHOT</version>
	</parent>

	<artifactId>sensor-tester</artifactId>
	<name>GUI rms sensor tester</name>

	<version>1.0-SNAPSHOT</version>
	<packaging>jar</packaging>

	<properties>
		<slf4j.version>1.6.1</slf4j.version>
	</properties>




	<dependencies>

		<dependency>
			<groupId>com.racer40</groupId>
			<version>4.0.0-SNAPSHOT</version>
			<artifactId>sensor-common</artifactId>
		</dependency>

		<dependency>
			<groupId>com.racer40</groupId>
			<version>4.0.0-SNAPSHOT</version>
			<artifactId>sensor-legacy</artifactId>
		</dependency>

		<dependency>
			<groupId>com.racer40</groupId>
			<version>4.0.0-SNAPSHOT</version>
			<artifactId>sensor-arduino</artifactId>
		</dependency>

		<dependency>
			<groupId>com.racer40</groupId>
			<version>4.0.0-SNAPSHOT</version>
			<artifactId>sensor-phidget</artifactId>
		</dependency>



		<!-- Apache Commons -->




	</dependencies>
	<build>
		<plugins>
			<plugin>
				<artifactId>maven-dependency-plugin</artifactId>
				<version>3.1.1</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>copy</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>com.racer40</groupId>
									<version>4.0.0-SNAPSHOT</version>
									<artifactId>sensor-arduino</artifactId>
									<type>jar</type>
									<overWrite>true</overWrite>
									<outputDirectory>${project.basedir}/plugins</outputDirectory>
								</artifactItem>

								<artifactItem>
									<groupId>com.racer40</groupId>
									<version>4.0.0-SNAPSHOT</version>
									<artifactId>sensor-legacy</artifactId>
									<type>jar</type>
									<overWrite>true</overWrite>
									<outputDirectory>${project.basedir}/plugins</outputDirectory>
								</artifactItem>

								<artifactItem>
									<groupId>com.racer40</groupId>
									<artifactId>sensor-phidget</artifactId>
									<version>4.0.0-SNAPSHOT</version>
									<type>jar</type>
									<overWrite>true</overWrite>
									<outputDirectory>${project.basedir}/plugins</outputDirectory>
								</artifactItem>

							</artifactItems>
							<outputDirectory>plugins1</outputDirectory>
						</configuration>
					</execution>
				</executions>
			</plugin>
			
			
			<plugin>
				<artifactId>maven-dependency-plugin</artifactId>
				<version>3.1.1</version>
				<executions>
					<execution>
						<phase>validate</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>com.racer40</groupId>
									<version>4.0.0-SNAPSHOT</version>
									<artifactId>sensor-arduino</artifactId>
									<type>jar</type>
									<overWrite>true</overWrite>
									<outputDirectory>${project.basedir}/plugins</outputDirectory>
									<includes>images/**/*.*,tools/**/*.*</includes>
								</artifactItem>

								<artifactItem>
									<groupId>com.racer40</groupId>
									<version>4.0.0-SNAPSHOT</version>
									<artifactId>sensor-legacy</artifactId>
									<type>jar</type>
									<overWrite>true</overWrite>
									<outputDirectory>${project.basedir}/plugins</outputDirectory>
									<includes>images/**/*.*,x64/**/*.*,x86/**/*.*</includes>
								</artifactItem>

								<artifactItem>
									<groupId>com.racer40</groupId>
									<artifactId>sensor-phidget</artifactId>
									<version>4.0.0-SNAPSHOT</version>
									<type>jar</type>
									<overWrite>true</overWrite>
									<outputDirectory>${project.basedir}/plugins</outputDirectory>
									<includes>images/**/*.*</includes>
								</artifactItem>

							</artifactItems>
							<outputDirectory>plugins1</outputDirectory>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>